<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_fr_tab_thongbao_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_tab"
        android:orientation="vertical">

        <include layout="@layout/header_title" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/layout_10"
                android:scrollbars="none"
                android:fillViewport="false">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/id_tv_content_message"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize45" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/app_name"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/top_bar_two_button"
            android:layout_gravity="center_vertical"
            android:background="@color/header"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:padding="@dimen/layout_10"
            android:orientation="horizontal">
            <Button
                android:id="@+id/id_btn_camera"
                android:layout_width="@dimen/layout_125"
                android:layout_height="@dimen/layout_125"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@drawable/ic_camera"/>
            <EditText
                android:id="@+id/id_edt_content"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_marginLeft="@dimen/layout_10"
                android:layout_marginRight="@dimen/layout_10"
                android:background="@color/white"
                android:layout_height="@dimen/layout_125" />
            <Button
                android:id="@+id/id_btn_send"
                android:layout_width="@dimen/layout_125"
                android:layout_height="@dimen/layout_125"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@drawable/ic_send"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>